# Funktion um einzelne Netzwerkkarten zu prüfen
#
# usage: ifconfig_check "$ETH"
#
ifconfig_check ()
{
	#
	# Prüfen ob das Device in $ETH schon läuft. Wenn ja wird es deaktiviert.
	#
	PROG=ifconfig
	for i in $@ ; do
		ETH_IST="`ifconfig $i`"
		if [ "$ETH_IST" ] ; then
			PROG_OPT="$i down"
			prog_exec $PROG "$PROG_OPT"
		fi
	done
}
