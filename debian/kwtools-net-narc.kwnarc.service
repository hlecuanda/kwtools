[Unit]
Description=kwtools netfilter automatic rules configurator
DefaultDependencies=no
Before=network.target

[Service]
Type=oneshot
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=-/usr/sbin/kwnarc start
ExecStop=-/usr/sbin/kwnarc stop

[Install]
WantedBy=multi-user.target
